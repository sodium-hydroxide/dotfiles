syntax on " Syntax highlighting
set number " Line numbers
set norelativenumber
set mouse=a " Mouse mode
set mousemodel=popup
set nobackup " Don't back up files
set wrap " Word wrap
" Tab and indentation
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent
" Cursor line
" set nocursorline
" Color column at 80
set colorcolumn=80
" Mode display
" set noshowmode
" Clipboard
set clipboard=unnamedplus
xnoremap y "+y
" Break indent
set breakindent
" Undo file
set undofile
" Case-insensitive search with smartcase
set ignorecase
set smartcase
" Sign column
set signcolumn=yes
" Update time
set updatetime=550
" Timeout length
set timeoutlen=300
" Window splits
set splitright
set splitbelow
" Show whitespace characters
set list
set listchars=tab:»\ ,trail:~,nbsp:‡,extends:›,precedes:‹,space:⋅,eol:¬
" Scroll offset
set scrolloff=10

