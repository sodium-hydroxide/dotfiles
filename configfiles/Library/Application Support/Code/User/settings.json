{
  // General UI
  "window.zoomLevel": -1,
  "workbench.colorTheme": "Github Light High Contrast",
  "workbench.activityBar.location": "top",
  "workbench.settings.editor": "json",
  "workbench.tips.enabled": false,
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.layoutControl.enabled": false,
  "zenMode.showTabs": "none",

  // Editor Behavior
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 92,
  "editor.largeFileOptimizations": false,

  // Formatting and Whitespace
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "visibleWhitespace.space.enable": true,
  "visibleWhitespace.htab.text": "»",
  "visibleWhitespace.newLine.crLf": "↲↓",
  "visibleWhitespace.newLine.lf": "¬",
  "visibleWhitespace.nbsp.text": "‡",
  "visibleWhitespace.widespace.text": "»⎕",
  "visibleWhitespace.eof.text": "___",
  "rewrap.autoWrap.enabled": true,

  // Python
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.analysis.languageServerMode": "full",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.typeEvaluation.strictDictionaryInference": true,
  "python.analysis.typeEvaluation.strictListInference": true,
  "python.analysis.typeEvaluation.strictSetInference": true,
  "python.createEnvironment.trigger": "off",
  "python.missingPackage.severity": "Warning",
  "python.terminal.executeInFileDir": true,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "ruff.lineLength": 80,
  "autoDocstring.docstringFormat": "numpy",

  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },

  // R
  "[r]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // C
  "[c]": {
    "editor.tabSize": 8,
    "editor.insertSpaces": false,
    "editor.detectIndentation": true,
    "editor.wordBasedSuggestions": "off",
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.suggest.insertMode": "replace"
  },

  // C++
  "[cpp]": {
    "editor.tabSize": 8,
    "editor.insertSpaces": false,
    "editor.detectIndentation": true,
    "editor.wordBasedSuggestions": "off",
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.suggest.insertMode": "replace"
  },

  // MCNP
  "[mcnp]": {
    "editor.tabSize": 5,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true
  },

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },

  // LaTeX
  "[tex]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[latex]": {
    "editor.tabSize": 2
  },
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.clean.command": "latexmk -c",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-r",
        "$HOME/.config/latexmk/latexmkrc",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],

  // Terminal
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
  "terminal.integrated.allowedLinkSchemes": [
    "file", "http", "https", "mailto", "vscode", "vscode-insiders", "docker-desktop"
  ],
  "terminal.integrated.defaultProfile.osx": "dash",
  "terminal.integrated.defaultProfile.linux": "/bin/sh",

  // Extension Configurations
  "vim.useSystemClipboard": true,
  "C_Cpp.doxygen.generatedStyle": "/**",
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "jupyter.interactiveWindow.notebookRepl": true,
  "makefile.configureOnOpen": false,
  "extensions.ignoreRecommendations": true,

  // File Associations
  "files.associations": {
    "*.in": "mcnp",
    "Brewfile-cli": "ruby"
  },

  // Spell Checker
  "cSpell.userWords": [
    "ansatz", "bioassay", "Brandl", "chirality", "covariates",
    "eigen", "eigenstate", "frequentist", "Gelman", "helicity",
    "hyperparameters", "involutory", "Klumpp", "MCMC", "Meengs",
    "Minkowski", "NNSS", "quantiles", "radionuclides", "spinor", "Weyl"
  ],

  // Telemetry and Chat
  "telemetry.feedback.enabled": false,
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.extensionTools.enabled": false,
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "python.analysis.typeEvaluation.deprecateTypingAliases": true,
  "python.analysis.inlayHints.variableTypes": true,
  "security.workspace.trust.untrustedFiles": "open"
}
